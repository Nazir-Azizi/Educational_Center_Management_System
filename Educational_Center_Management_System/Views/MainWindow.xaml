<Window x:Class="Educational_Center_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Educational_Center_Management_System"
        xmlns:vm="clr-namespace:Educational_Center_Management_System.ViewModels"
        xmlns:views="clr-namespace:Educational_Center_Management_System.Views"
        mc:Ignorable="d"
        Title="Educational Management System" Height="450" Width="800">

    <DockPanel Background="White">
        <StackPanel DockPanel.Dock="Top">
            <Button Command="{Binding GoToHomePageCommand}" Content="Home" Width="60" Height="20" HorizontalAlignment="Left"/>
        </StackPanel>
        <ContentControl Content="{Binding CurrentViewModel}"/>
        
    </DockPanel>    
    
</Window>
