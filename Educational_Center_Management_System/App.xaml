<Application x:Class="Educational_Center_Management_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Educational_Center_Management_System"
             xmlns:vm="clr-namespace:Educational_Center_Management_System.ViewModels"
             xmlns:views="clr-namespace:Educational_Center_Management_System.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LogInViewModel}">
            <views:LogInView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StudentDashboardViewModel}">
            <views:StudentDashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeacherDashboardViewModel}">
            <views:TeacherDashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeacherViewModel}">
            <views:TeacherView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeacherCLassListViewModel}">
            <views:TeacherCLassListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeacherScoreSetViewModel}">
            <views:TeacherScoreSetView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerViewModel}">
            <views:ManagerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerDashboardViewModel}">
            <views:ManagerDashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerAddViewModel}">
            <views:ManagerAddView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerAllStudentsViewModel}">
            <views:ManagerAllStudentsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerSearchViewModel}">
            <views:ManagerSearchView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerUpdateStudentViewModel}">
            <views:ManagerUpdateStudentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerUpdateTeacherViewModel}">
            <views:ManagerUpdateTeacherView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerAllTeachersViewModel}">
            <views:ManagerAllTeachersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManagerViewAllViewModel}">
            <views:ManagerViewAllView/>
        </DataTemplate>
    </Application.Resources>
</Application>
